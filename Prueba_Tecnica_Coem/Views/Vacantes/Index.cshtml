@model IEnumerable<Prueba_Tecnica_Coem.Models.VacanteViewModel>

@{
    ViewData["Title"] = "Empleos";
    ViewData["MenuUsuario"] = true;
    Layout = "_Layout";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <h3>¡Bienvenido!</h3>
        <div class="col-md-12 mt-4">
            <div class="card shadow-lg">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <p class="mb-4">Estos son los empleos publicados por ti:</p>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                                    <th>@Html.DisplayNameFor(model => model.Requisitos)</th>
                                    <th>@Html.DisplayNameFor(model => model.Industria)</th>
                                    <th>N° Aplicaciones</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Requisitos)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Industria)</td>
                                        <td>
                                            <a class="btn btn-outline-info" asp-action="VerAplicantes" asp-route-id="@item.Id" title="Ver Aplicantes">
                                                @item.NumeroDeAplicaciones
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-primary" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a> |
                                            <a asp-action="Details" asp-route-id="@item.Id" class="text-info" title="Detalles">
                                                <i class="fas fa-info-circle"></i>
                                            </a> |
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger" title="Eliminar">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>Todavia no has publicado empleos.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

