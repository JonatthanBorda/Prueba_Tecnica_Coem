@model IEnumerable<Prueba_Tecnica_Coem.Models.Vacantes>

@{
    ViewData["Title"] = "Empleos";
    ViewData["MenuUsuario"] = true;
    Layout = "_Layout";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <h3>¡Bienvenido!</h3>
        <div class="col-md-12 mt-4">
            <div class="card shadow-lg">
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Descripcion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Requisitos)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IdEmpleadorNavigation)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Requisitos)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdEmpleadorNavigation.Industria)
                                    </td>
                                    <td>
                                        <a class="btn btn-outline-dark" asp-action="Details" asp-route-id="@item.Id">Aplicar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>